///save to local storage
function saveItem() {
    var userInput = localStorage.getItem(".userInput")
    userInputSpan.textContent = userInput;
    // localStorage.storelist = document.getElementById("item").innerHTML;
}

//save all the event
function ClikedButton() {
    var item = userInputEl.value.trim();
    console.log(item);
    saveBtnEl.onclick = localStorage.setItem("item", JSON.stringify(item));
    saveItem()  
}
